@model IEnumerable<Web_ASM_Nhom6.Models.User>

@{
    ViewData["Title"] = "IndexUser";
}
<div class="container">
    <h1 class="text-center">Quản lý User</h1>
    <p>
        <a class="btn btn-primary" asp-action="Create">Thêm mới</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.role)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDelete)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.role)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.IsDelete)
                    </td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.UserId">Cập nhật thông tin User</a>
                        </div>
                    </td>
@*                     <td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td> *@
                </tr>
            }
        </tbody>
    </table>
</div>
