@using Web_ASM_Nhom6.Service
@model Web_ASM_Nhom6.Models.UpdateInfor
@{
    ViewData["Title"] = "Cập nhật thông tin";
}

<div class="container">
    <h2>Cập nhật thông tin</h2>
    <form asp-action="UpdateInfor" method="post">
        <div class="mb-3">
            <label for="Name" class="form-label">Tên: </label>
            <input type="text" class="form-control" name="Name" required />
        </div>
        <div class="mb-3">
            <label for="Phone" class="form-label">Số điện thoại: </label>
            <input type="text" class="form-control" id="Phone" name="Phone" required />
        </div>
        <div class="mb-3">
            <label for="Address" class="form-label">Địa chỉ: </label>
            <input type="text" class="form-control" id="Address" name="Address" required />
        </div>
        <input type="text" hidden value="@SUser.User.Email" class="form-control"  name="Email" />
        <input type="checkbox" hidden class="form-control" name="IsDelete" />
        <input type="text" hidden value="@SUser.User.role" class="form-control" name="role" />

        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>
<script>
    $(document).ready(function () {
        var UpdateUser = '@ViewData["UpdateUser"]';
        if (UpdateUser === "Null") {
            Swal.fire({
                title: "Vui lòng nhập đúng định dạng",
                text: "Không được bỏ trống",
                icon: "error",
            });
        } else if (UpdateUser === "Succsess") {
            Swal.fire({
                title: "Cập nhật thành công",
                text: "Thông tin của bạn đã được cập nhật",
                icon: "success",
            });
        } else if (UpdateUser === "NotSuccsess") {
            Swal.fire({
                title: "Cập nhật thất bại",
                text: "Có lỗi vui liên hệ admin",
                icon: "error",
            });
        }
    });
</script>
