@model Web_ASM_Nhom6.Models.Restaurant
@{
    ViewData["Title"] = "Add Restaurant";
    var categories = ViewBag.Categories as List<Category>;
}

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header bg-danger text-white">
                <h5 class="text-center" class="mb-0">TRỞ HÀNH NGƯỜI BÁN</h5>
            </div>
            <div class="card-body">
                <form asp-action="Add">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"> <strong>Danh Mục Sản Phẩm</strong></label>
                        <select asp-for="CategoryId" class="form-control">
                            <option value="">Select Category</option>
                            @if (categories != null)
                            {
                                foreach (var category in categories)
                                {
                                    <option value="@category.CategoryId">@category.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"> <strong>Tên Cửa Hàng</strong></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> <strong>Ảnh Cửa Hàng</strong></label>
                        <input type="file" name="ImageFile" class="form-control-file" />
                        <small class="form-text text-muted">Choose an image file to upload.</small>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label"> <strong>Địa Chỉ</strong></label>
                        <input asp-for="Address" class="form-control" placeholder="Enter Address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="OpeningHours" class="control-label"> <strong>Giờ Mở Cửa</strong></label>
                        <input asp-for="OpeningHours" class="form-control" placeholder="Enter Opening Hours" />
                        <span asp-validation-for="OpeningHours" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <div class="d-flex justify-content-center">
                            <input type="submit" value="Đăng ký" class="btn btn-danger mx-2" />
                            <a asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Quay Về</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
