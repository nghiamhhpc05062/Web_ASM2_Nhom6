@model IEnumerable<Web_ASM_Nhom6.Models.User>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success col-md-8 m-auto row mb-2" role="alert">
        <h5 class="col-md-11">@TempData["SuccessMessage"]</h5>
        <a href="~/User/GetAll" class="btn btn-danger col-md-1">Đóng</a>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <a asp-action="Add" class="btn btn-primary mt-3">Thêm danh mục mới</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-striped table-borderless">
                <thead>
                    <tr>
                        <th>UserID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Password</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Is Delete</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.UserId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                            <td>@Html.DisplayFor(modelItem => item.role)</td>
                            <td>@Html.DisplayFor(modelItem => item.IsDelete)</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.UserId })" class="btn btn-primary">Sửa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

