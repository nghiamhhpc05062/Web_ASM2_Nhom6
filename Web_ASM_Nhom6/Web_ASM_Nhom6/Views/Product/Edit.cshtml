@model Web_ASM_Nhom6.Models.Product


@{
    ViewData["Title"] = "Kênh người bán - sửa sản phẩm";
    var listmenus = ViewBag.Menus as List<Menu>;
}

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                <input asp-for="ProductId" class="form-control" readonly />
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MenuId" class="control-label"><strong>Menu Sản Phẩm</strong></label>
                <select asp-for="MenuId" class="form-control">
                    <option value="">-- Chọn Menu --</option>
                    @if (listmenus != null)
                    {
                        foreach (var m in listmenus)
                        {
                            <option value="@m.MenuId">@m.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="MenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"><strong>Tên Sản Phẩm</strong></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"><strong>Ghi Chú Sản Phẩm</strong></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"><strong>Hình Ảnh Sản Phẩm</strong></label>
                <input asp-for="Image" type="file" id="ImageFile" name="ImageFile" class="form-control-file" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"><strong>Giá Sản Phẩm</strong></label>
                <div class="input-group">
                    <input asp-for="Price" class="form-control" required />
                    <div class="input-group-append">
                        <span class="input-group-text">0 đ</span>
                    </div>
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check" hidden>
                <input class="form-check-input" asp-for="IsDelete" />
                <label class="form-check-label" for="IsDelete">
                    @Html.DisplayNameFor(model => model.IsDelete)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" id="saveBtn" />
                <a class="btn btn-secondary" asp-action="AdminProduct">Quay lại</a>
            </div>
        </form>

